/* 水平间距 */
.app-container {
  height: 100vh;
  position: relative;
}
.global-loading {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.9);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}
.global-loading .loading-icon {
  width: 50px;
  height: 50px;
}
.global-loading .loading-text {
  margin-top: 10px;
  font-size: 14px;
  color: #666;
}
.global-error {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.9);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}
.global-error .error-text {
  font-size: 16px;
  color: #ff4d4f;
  margin-bottom: 20px;
}
.global-error .retry-button {
  background-color: #4a90e2;
  color: #fff;
  border-radius: 20px;
  padding: 5px 20px;
}
.main-content {
  height: 100%;
}

