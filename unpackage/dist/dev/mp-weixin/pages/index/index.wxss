/* 水平间距 */
@keyframes float {
0% {
    transform: translateY(0px);
}
50% {
    transform: translateY(-10px);
}
100% {
    transform: translateY(0px);
}
}
.container {
  padding: 20px;
  background: linear-gradient(135deg, rgba(255, 235, 205, 0.15), rgba(255, 228, 196, 0.1));
  -webkit-backdrop-filter: blur(20px);
          backdrop-filter: blur(20px);
  min-height: 100vh;
}
.container .banner {
  margin: -20px -20px 20px -20px;
  height: 200px;
  position: relative;
  border-radius: 20px;
  overflow: hidden;
}
.container .banner .swiper {
  height: 100%;
}
.container .banner .banner-image {
  width: 100%;
  height: 100%;
}
.container .banner .banner-text {
  position: absolute;
  bottom: 20px;
  left: 20px;
  background: rgba(255, 255, 255, 0.8);
  padding: 10px 20px;
  border-radius: 15px;
  -webkit-backdrop-filter: blur(5px);
          backdrop-filter: blur(5px);
}
.container .banner .banner-text .banner-title {
  font-size: 20px;
  font-weight: bold;
  color: #333;
  display: block;
}
.container .banner .banner-text .banner-subtitle {
  font-size: 14px;
  color: #666;
}
.container .progress-section {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20px;
  padding: 15px;
  margin-bottom: 20px;
  -webkit-backdrop-filter: blur(10px);
          backdrop-filter: blur(10px);
}
.container .progress-section .progress-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
}
.container .progress-section .progress-header .progress-title {
  font-size: 16px;
  color: #fff;
}
.container .progress-section .progress-header .progress-percent {
  font-size: 16px;
  color: #fff;
  font-weight: bold;
}
.container .progress-section .progress-bar {
  height: 8px;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 4px;
  overflow: hidden;
}
.container .progress-section .progress-bar .progress-fill {
  height: 100%;
  background: #ff9a9e;
  border-radius: 4px;
  transition: width 0.5s ease;
}
.container .grid-container {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15px;
  margin-bottom: 20px;
}
.container .grid-container .card {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20px;
  padding: 15px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  -webkit-backdrop-filter: blur(10px);
          backdrop-filter: blur(10px);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
  cursor: pointer;
  position: relative;
  overflow: hidden;
}
.container .grid-container .card:hover {
  transform: translateY(-5px);
  box-shadow: 0 12px 40px rgba(0, 0, 0, 0.2);
}
.container .grid-container .card:active {
  transform: scale(0.98);
}
.container .grid-container .card .icon {
  width: 50px;
  height: 50px;
  margin-bottom: 10px;
  filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.1));
  z-index: 1;
}
.container .grid-container .card .label {
  font-size: 16px;
  font-weight: 500;
  color: #fff;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
  z-index: 1;
}
.container .grid-container .card .sub-label {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 5px;
  z-index: 1;
}
.container .grid-container .card .decor {
  position: absolute;
  right: -20px;
  bottom: -20px;
  width: 80px;
  height: 80px;
  opacity: 0.3;
  animation: float 3s ease-in-out infinite;
}
.container .grid-container .learn-card {
  background: linear-gradient(135deg, rgba(168, 224, 99, 0.7), rgba(86, 171, 47, 0.7));
}
.container .grid-container .yunmu-card {
  background: linear-gradient(135deg, rgba(255, 154, 158, 0.7), rgba(250, 208, 196, 0.7));
}
.container .grid-container .games-card {
  background: linear-gradient(135deg, rgba(161, 196, 253, 0.7), rgba(194, 233, 251, 0.7));
}
.container .grid-container .profile-card {
  background: linear-gradient(135deg, rgba(255, 193, 7, 0.7), rgba(255, 235, 59, 0.7));
}
.container .daily-tip {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20px;
  padding: 15px;
  display: flex;
  align-items: center;
  -webkit-backdrop-filter: blur(10px);
          backdrop-filter: blur(10px);
}
.container .daily-tip .tip-icon {
  width: 60px;
  height: 60px;
  margin-right: 15px;
  animation: float 3s ease-in-out infinite;
}
.container .daily-tip .tip-content {
  flex: 1;
}
.container .daily-tip .tip-content .tip-title {
  font-size: 16px;
  color: #fff;
  font-weight: bold;
  display: block;
  margin-bottom: 5px;
}
.container .daily-tip .tip-content .tip-text {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.8);
}