/* 水平间距 */
.shengmu-container {
  padding: 20px;
}
.shengmu-container .header {
  margin-bottom: 20px;
}
.shengmu-container .header .title {
  font-size: 20px;
  font-weight: bold;
  color: #333;
}
.shengmu-container .grid-container {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 15px;
}
.shengmu-container .grid-container .pinyin-card {
  background: #fff;
  border-radius: 8px;
  padding: 15px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
  position: relative;
  transition: all 0.2s ease;
}
.shengmu-container .grid-container .pinyin-card.playing {
  background: #f0f8ff;
  transform: scale(1.05);
}
.shengmu-container .grid-container .pinyin-card .pinyin {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 8px;
}
.shengmu-container .grid-container .pinyin-card .play-icon {
  width: 24px;
  height: 24px;
}
.shengmu-container .grid-container .pinyin-card .loading-spinner {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 20px;
  height: 20px;
  border: 2px solid #007AFF;
  border-top-color: transparent;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}
@keyframes spin {
to {
    transform: translate(-50%, -50%) rotate(360deg);
}
}